---
import FilterTabs from "./ui/FilterTabs.astro";
import FeaturedPost from "./ui/FeaturedPost.astro";
import PostCard from "./ui/PostCard.astro";
import { getPosts, type Post } from "../lib/hashnode";

const { posts, pageInfo } = await getPosts();
const featuredPost = posts[0];
const remainingPosts = posts.slice(1);
---

<section class="space-y-20 pb-20">
  <FilterTabs />

  <div
    id="featured-post-container"
    data-featured-slug={featuredPost?.slug || ""}
  >
    {featuredPost && <FeaturedPost post={featuredPost} />}
  </div>

  <div
    id="posts-grid"
    class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6"
  >
    {remainingPosts.map((post: Post) => <PostCard post={post} />)}
  </div>

  {
    pageInfo.hasNextPage && (
      <div id="sentinel" data-cursor={pageInfo.endCursor} class="h-10 w-full" />
    )
  }
  <div
    id="loading-indicator"
    class="hidden w-full text-center py-8 text-gray-500"
  >
    Cargando m√°s posts...
  </div>
</section>

<script>
  const sentinel = document.getElementById("sentinel");
  const postsGrid = document.getElementById("posts-grid");
  const loadingIndicator = document.getElementById("loading-indicator");
  const featuredPostContainer = document.getElementById(
    "featured-post-container"
  );
  const featuredPostSlug =
    featuredPostContainer?.getAttribute("data-featured-slug") || "";

  let isLoading = false;
  let currentTag = "";

  const formatDate = (dateString: string) => {
    return new Date(dateString).toLocaleDateString("es-ES", {
      day: "2-digit",
      month: "2-digit",
      year: "numeric",
    });
  };

  const createPostCard = (post: any) => {
    const card = document.createElement("a");
    card.href = `/post/${post.slug}`;
    card.className =
      "group relative bg-card hover:bg-card/80 border border-white/5 hover:border-white/10 transition-all duration-300 rounded-2xl overflow-hidden cursor-pointer flex flex-col h-full";

    const tagsHtml =
      post.tags && post.tags.length > 0
        ? `<div class="absolute top-4 left-4 z-10 inline-flex items-center rounded-full border px-2.5 py-0.5 text-xs font-semibold transition-colors focus:outline-none focus:ring-2 focus:ring-ring focus:ring-offset-2 border-transparent bg-secondary text-secondary-foreground hover:bg-secondary/80 bg-white/10 text-white backdrop-blur-md border-white/10">${post.tags[0].name}</div>`
        : `<div class="absolute top-4 left-4 z-10 inline-flex items-center rounded-full border px-2.5 py-0.5 text-xs font-semibold transition-colors focus:outline-none focus:ring-2 focus:ring-ring focus:ring-offset-2 border-transparent bg-secondary text-secondary-foreground hover:bg-secondary/80 bg-white/10 text-white backdrop-blur-md border-white/10">General</div>`;

    card.innerHTML = `
      <div class="relative h-49 overflow-hidden">
        ${tagsHtml}
        <img
          src="${post.coverImage.url}"
          alt="${post.title}"
          class="w-full h-full object-cover transform group-hover:scale-105 duration-700 opacity-80 group-hover:opacity-100 transition-all"
        />
      </div>
      <div class="p-6 flex-1 flex flex-col">
        <h3 class="text-lg font-semibold leading-snug text-white">${post.title}</h3>
        <p class="text-sm text-gray-500 line-clamp-3 leading-relaxed mt-2">
          ${post.brief}
        </p>
        <div class="flex items-center justify-between pt-4 mt-4 text-xs text-gray-500 border-t border-white/5">
          <div class="flex items-center gap-2">
             <div class="w-6 h-6 rounded-full overflow-hidden">
                <img src="${post.author.profilePicture}" alt="${post.author.name}" class="w-full h-full object-cover" />
             </div>
            <span>${post.author.name}</span>
          </div>
          <div class="flex items-center gap-4">
            <span>${formatDate(post.publishedAt)}</span>
            <span>${post.readTimeInMinutes} min</span>
          </div>
        </div>
      </div>
    `;
    return card;
  };

  const createSkeletonCard = () => {
    const card = document.createElement("div");
    card.className =
      "bg-card border border-white/5 rounded-2xl overflow-hidden flex flex-col h-full animate-pulse";
    card.innerHTML = `
      <div class="h-49 bg-white/5 w-full"></div>
      <div class="p-6 flex-1 flex flex-col space-y-4">
        <div class="h-6 bg-white/5 rounded w-3/4"></div>
        <div class="space-y-2">
          <div class="h-4 bg-white/5 rounded w-full"></div>
          <div class="h-4 bg-white/5 rounded w-full"></div>
          <div class="h-4 bg-white/5 rounded w-2/3"></div>
        </div>
        <div class="flex items-center justify-between pt-4 mt-auto border-t border-white/5">
          <div class="flex items-center gap-2">
            <div class="w-6 h-6 rounded-full bg-white/5"></div>
            <div class="h-4 bg-white/5 rounded w-20"></div>
          </div>
          <div class="h-4 bg-white/5 rounded w-16"></div>
        </div>
      </div>
    `;
    return card;
  };

  const fetchMorePosts = async (
    cursor: string | null,
    tag = "",
    reset = false
  ) => {
    if (isLoading) return;
    isLoading = true;

    // If resetting, we already showed skeletons in the event listener
    // If not resetting (pagination), we show the loading indicator at the bottom
    if (!reset) {
      loadingIndicator?.classList.remove("hidden");
    }

    try {
      const query = `
        query Publication($host: String!, $after: String, $tagSlugs: [String!]) {
          publication(host: $host) {
            posts(first: 6, after: $after, filter: { tagSlugs: $tagSlugs }) {
              pageInfo {
                hasNextPage
                endCursor
              }
              edges {
                node {
                  title
                  brief
                  slug
                  coverImage {
                    url
                  }
                  publishedAt
                  readTimeInMinutes
                  author {
                    name
                    profilePicture
                  }
                  tags {
                    name
                    slug
                  }
                }
              }
            }
          }
        }
      `;

      const host = "davidvictoria.hashnode.dev";
      const variables: any = {
        host,
        after: cursor,
      };

      // Only apply tag filter if it's not "general" (which means untagged) and not empty (which means all)
      if (tag && tag !== "general") {
        variables.tagSlugs = [tag];
      }

      const response = await fetch("https://gql.hashnode.com", {
        method: "POST",
        headers: {
          "Content-Type": "application/json",
        },
        body: JSON.stringify({
          query,
          variables,
        }),
      });

      const { data } = await response.json();
      const newPosts = data.publication.posts.edges.map(
        (edge: any) => edge.node
      );
      const { hasNextPage, endCursor } = data.publication.posts.pageInfo;

      // Filter posts client-side for "general" tag (untagged posts)
      let filteredPosts = newPosts;
      if (tag === "general") {
        filteredPosts = newPosts.filter(
          (post: any) => !post.tags || post.tags.length === 0
        );
      } else if (!tag && reset) {
        // If we are in "Todos" (no tag) and resetting (first page),
        // filter out the featured post to avoid duplication
        filteredPosts = newPosts.filter(
          (post: any) => post.slug !== featuredPostSlug
        );
      }

      if (reset && postsGrid) {
        postsGrid.innerHTML = "";
      }

      filteredPosts.forEach((post: any) => {
        const card = createPostCard(post);
        postsGrid?.appendChild(card);
      });

      if (sentinel) {
        if (hasNextPage) {
          sentinel.setAttribute("data-cursor", endCursor);
          sentinel.style.display = "block";
        } else {
          sentinel.removeAttribute("data-cursor");
          sentinel.style.display = "none";
        }
      }

      // If we filtered out all posts but there are more pages, fetch next page immediately
      if (
        tag === "general" &&
        filteredPosts.length === 0 &&
        hasNextPage &&
        endCursor
      ) {
        isLoading = false; // Reset loading state for recursive call
        await fetchMorePosts(endCursor, tag, false);
        return; // Return to avoid setting isLoading = false again in finally
      }
    } catch (error) {
      console.error("Error fetching more posts:", error);
    } finally {
      // Only set isLoading to false if we didn't recurse
      if (isLoading) {
        isLoading = false;
        loadingIndicator?.classList.add("hidden");
      }
    }
  };

  document.addEventListener("filter-change", ((e: CustomEvent) => {
    const { tag } = e.detail;
    currentTag = tag;

    // Toggle featured post visibility
    if (featuredPostContainer) {
      if (tag) {
        featuredPostContainer.style.display = "none";
      } else {
        featuredPostContainer.style.display = "block";
      }
    }

    // Clear grid immediately and show skeletons
    if (postsGrid) {
      postsGrid.innerHTML = "";
      for (let i = 0; i < 6; i++) {
        postsGrid.appendChild(createSkeletonCard());
      }
    }

    // Hide loading indicator (we use skeletons for reset)
    loadingIndicator?.classList.add("hidden");

    // Reset and fetch
    fetchMorePosts(null, currentTag, true);
  }) as EventListener);

  if (sentinel) {
    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            const cursor = sentinel.getAttribute("data-cursor");
            if (cursor) {
              fetchMorePosts(cursor, currentTag);
            }
          }
        });
      },
      { rootMargin: "200px" }
    );

    observer.observe(sentinel);
  }
</script>
