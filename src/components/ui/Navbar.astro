---
import { siteConfig } from "../../config/siteConfig";
---

<header
    class="bg-white border-b border-b-slate-200 py-3 sm:py-4 flex items-center justify-center fixed w-full z-20"
>
    <nav class="w-full max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 flex items-center justify-between">
        <a href="/"><figure class="font-bold text-lg sm:text-xl">David Victoria</figure></a>

        <!-- Desktop Navigation -->
        <ul class="hidden md:flex items-center gap-6 lg:gap-10">
            {
                siteConfig.itemsNav.map((item) => (
                    <li class="text-neutral-400 hover:text-black transition-colors duration-300">
                        <a href={item.href} class="text-sm lg:text-base">{item.label}</a>
                    </li>
                ))
            }
        </ul>

        <!-- Mobile Menu Button -->
        <button
            id="mobile-menu-button"
            class="md:hidden p-2 text-neutral-400 hover:text-black transition-colors"
            aria-label="Abrir menú de navegación"
        >
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
        </button>
    </nav>

    <!-- Mobile Navigation -->
    <div
        id="mobile-menu"
        class="md:hidden absolute top-full left-0 w-full bg-white border-b border-slate-200 shadow-lg hidden"
    >
        <ul class="px-4 py-4 space-y-3">
            {
                siteConfig.itemsNav.map((item) => (
                    <li>
                        <a
                            href={item.href}
                            class="block py-2 text-neutral-400 hover:text-black transition-colors duration-300"
                        >
                            {item.label}
                        </a>
                    </li>
                ))
            }
        </ul>
    </div>
</header>

<script>
    // Mobile menu toggle
    const mobileMenuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');

    mobileMenuButton?.addEventListener('click', () => {
        mobileMenu?.classList.toggle('hidden');
    });

    // Close mobile menu when clicking outside
    document.addEventListener('click', (e) => {
        if (!mobileMenuButton?.contains(e.target as Node) && !mobileMenu?.contains(e.target as Node)) {
            mobileMenu?.classList.add('hidden');
        }
    });
</script>
