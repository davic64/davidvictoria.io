---
import { Image } from "astro:assets";
import Layout from "../../layouts/Layout.astro";
import { getPostBySlug, HASHNODE_CONFIG } from "../../lib/hashnode";

const { slug } = Astro.params;
const post = await getPostBySlug(HASHNODE_CONFIG.host, slug!);

if (!post) {
    return Astro.redirect("/404");
}

// Procesamos el HTML de Hashnode para añadir estilos como lo haríamos con Portable Text
const htmlBody = post.body
    .replace(
        /<p>/g,
        '<p class="mb-6 font-light text-base md:text-lg text-neutral-600">',
    )
    .replace(
        /<h1([^>]*)>/g,
        '<h1$1 class="text-xl md:text-4xl font-bold mt-8 mb-4 text-neutral-900">',
    )
    .replace(/<h2>/g, '<h2 class="text-2xl font-bold mt-6 mb-3">')
    .replace(/<h3>/g, '<h3 class="text-xl font-semibold mt-5 mb-2">')
    .replace(/<ul>/g, '<ul class="list-disc list-outside ml-6 mb-4 space-y-2 text-neutral-600">')
    .replace(/<ol>/g, '<ol class="list-decimal list-outside ml-6 mb-4 space-y-2 text-neutral-600">')
    .replace(/<li>/g, '<li class="font-light text-base md:text-lg pl-2">')
    .replace(
        /<blockquote>/g,
        '<blockquote class="border-l-4 border-blue-500 pl-4 py-2 mb-4 italic bg-blue-50">',
    )
    .replace(/<a([^>]*)>/g, '<a$1 class="text-blue-500 hover:underline">')
    .replace(
        /<img([^>]*?)class="([^"]*)"([^>]*)>/g,
        '<img$1class=" rounded-xl"$3>',
    );

const formattedDate = new Date(post.date).toLocaleDateString("es-ES", {
    month: "long",
    day: "numeric",
    year: "numeric",
});
---

<Layout
    title={post.seoTitle || post.title}
    description={post.seoDescription || post.excerpt}
    image={post.ogImage || post.mainImage}
    canonicalUrl={post.canonicalUrl}
>
    <article
        class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-6 sm:py-8 md:py-12 lg:py-16"
    >
        <!-- Header Section -->
        <header class="mb-6 sm:mb-8 md:mb-12">
            <div
                class="flex flex-wrap items-center gap-2 sm:gap-3 text-xs sm:text-sm text-gray-600 mb-3 sm:mb-4"
            >
                <time datetime={post.date} class="font-medium">
                    {formattedDate}
                </time>
                {
                    post.category && (
                        <>
                            <span aria-hidden="true" class="hidden sm:inline">
                                •
                            </span>
                            <span class="bg-blue-100 text-blue-800 px-2 py-1 rounded-md text-xs font-medium capitalize">
                                {post.category}
                            </span>
                        </>
                    )
                }
                {
                    post.readTime && (
                        <>
                            <span aria-hidden="true" class="hidden sm:inline">
                                •
                            </span>
                            <span class="text-xs sm:text-sm">
                                {post.readTime} min lectura
                            </span>
                        </>
                    )
                }
            </div>

            <h1
                class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl font-bold text-gray-900 leading-tight mb-4 sm:mb-6"
            >
                {post.title}
            </h1>

            {
                post.subtitle && (
                    <h2 class="text-lg sm:text-xl text-gray-600 leading-relaxed mb-4 sm:mb-6">
                        {post.subtitle}
                    </h2>
                )
            }
        </header>

        <!-- Featured Image -->
        {
            post.mainImage && (
                <figure class="mb-6 sm:mb-8 md:mb-12">
                    <div class="aspect-video max-sm:rounded-xl rounded-2xl overflow-hidden shadow-lg">
                        <Image
                            src={post.mainImage}
                            alt={`Imagen de portada para ${post.title}`}
                            width={1200}
                            height={630}
                            class="w-full h-full object-cover"
                            loading="eager"
                            decoding="async"
                        />
                    </div>
                </figure>
            )
        }

        <!-- Article Content -->
        <div>
            <div set:html={htmlBody} />
        </div>

        <!-- Back to Blog Link -->
        <footer class="mt-8 sm:mt-12 pt-6 sm:pt-8 border-t border-gray-200">
            <a
                href="/"
                class="inline-flex items-center text-blue-600 hover:text-blue-800 font-medium transition-colors text-sm sm:text-base"
                aria-label="Volver al blog principal"
            >
                <svg
                    class="w-3 h-3 sm:w-4 sm:h-4 mr-2"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                </svg>
                Volver al blog
            </a>
        </footer>
    </article>
</Layout>
